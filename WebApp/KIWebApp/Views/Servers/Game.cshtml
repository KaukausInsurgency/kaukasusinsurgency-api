@model KIWebApp.Models.GameModel

@section styles {
    <link href="~/Content/css/vendor-extensions/vendor-extensions.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/css/views/game/game.css" rel="stylesheet" type="text/css" />
}

@Html.Partial("_Header", new KIWebApp.Models.HtmlHeaderModel
{
    HeaderImage = "header-image-server-browser",
    Title = "Kaukasus Insurgency",
    InputValue = ""
})

<div class="main">
    <div class="server-description">
        <h1>@Model.ServerName</h1>
        <h4>Description</h4>
        @Html.Raw(@Model.ServerDescription)
    </div>

    <section class="game-section">
        <div class="info-layout">
            <h2>Server</h2>
            <div class="progress-bar-layout">
                <div class="progress-bar-title">Time Remaining: @Model.RestartTimeString</div>
                <div class="progress-bar">
                    <span style="width: @(((14400 - Model.RestartTime) / 14400.0) * 100)%"></span>
                </div>
            </div>

            <div class="dash-row">
                <div class="dash-columns dash-col-green">
                    <div class="dash-header dash-large-font">@Model.Status</div>
                    <div class="dash-header dash-small-font">Status</div>
                </div>
            </div>
            <div class="dash-row">
                <div class="dash-columns dash-col-tan">
                    <div class="dash-header dash-large-font">@Model.IPAddress</div>
                    <div class="dash-header dash-small-font">Address</div>
                </div>
                @if (Model.SimpleRadioEnabled)
                {
                    <div class="dash-columns dash-col-tan">
                        <div class="dash-header dash-large-font">@Model.SimpleRadioIPAddress</div>
                        <div class="dash-header dash-small-font">Simple Radio</div>
                    </div>
                }           
            </div>
            <div class="dash-row">
                <div class="dash-columns dash-columns-4 dash-col-dark">
                    <div class="dash-header dash-large-font">@Model.OnlinePlayersCount</div>
                    <div class="dash-header dash-small-font">Online</div>
                </div>
                <div class="dash-columns dash-columns-4 dash-col-lred">
                    <div class="dash-header dash-large-font">@Model.RedforPlayersCount</div>
                    <div class="dash-header dash-small-font">Red</div>
                </div>
                <div class="dash-columns dash-columns-4 dash-col-lblue">
                    <div class="dash-header dash-large-font">@Model.BluforPlayersCount</div>
                    <div class="dash-header dash-small-font">Blue</div>
                </div>
                <div class="dash-columns dash-columns-4 dash-col-gray">
                    <div class="dash-header dash-large-font">@Model.NeutralPlayersCount</div>
                    <div class="dash-header dash-small-font">Spectators</div>
                </div>
            </div>
            <div class="dash-row">
                <div class="dash-columns dash-columns-4 dash-col-dark">
                    <div class="dash-header dash-large-font">5</div>
                    <div class="dash-header dash-small-font">Lives Configured</div>
                </div>
                <div class="dash-columns dash-columns-4 dash-col-lred">
                    <div class="dash-header dash-large-font">@Model.Depots.Count</div>
                    <div class="dash-header dash-small-font">Depots</div>
                </div>
                <div class="dash-columns dash-columns-4 dash-col-lblue">
                    <div class="dash-header dash-large-font">@Model.CapturePoints.Count</div>
                    <div class="dash-header dash-small-font">Capture Points</div>
                </div>
            </div>
        </div>
        <div class="live-map-layout">
            <div class="live-map">
                <div id="googleMap"></div>
            </div>
            <div class="live-map-layout-footer">
                <div id="ingame-chat" class="live-map-footer-column glass-black">
                    <i class="fas fa-address-book game-navicon live-map-footer-span"></i>
                    <span class="live-map-footer-span">Chat</span>
                    @Html.Partial("_Chat", Model)
                </div>
                <div id="ingame-notifications" class="live-map-footer-column glass-black">
                    <i class="fas fa-address-book game-navicon live-map-footer-span"></i>
                    <span class="live-map-footer-span">Notifications</span>
                    @Html.Partial("_Notifications", Model)
                </div>
                <div class="live-map-footer-column glass-black">
                    <i class="fas fa-address-book game-navicon live-map-footer-span"></i>
                    <span class="live-map-footer-span">Missions
                        <a class="notification">5</a>
                    </span>
                </div>
            </div>
            @Html.Partial("_GameNavigation", Model)
        </div>
    </section>

</div>


@section scripts {
    @Scripts.Render("~/bundles/signalr")
    <script src="~/signalr/hubs"></script>

    <script type="text/javascript">
        var MODEL = @Html.Raw(Json.Encode(Model));
    </script>      
}

@section postscripts {
    <script src="~/Scripts/views/game/game-navigation.js"></script>
    <script src="~/Scripts/views/game/chat.js"></script>
    <script src="~/Scripts/views/game/notification.js"></script>
    <script src="~/Scripts/views/game/live-map.js"></script>
    <script src="~/Scripts/views/game/iconBuilder.js"></script>
    <script src="~/Scripts/views/game/gmaps.js"></script>    

    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCYmQlCOtX05GriYZDAfgnTUL5mY4kjyYQ&callback=initGoogleMap"></script>
    <script type="text/javascript">
        var n = $('#ingame-notifications').kiChat();
        var c = $('#ingame-chat').kiChat();

        c.add('Jojo', 0, 'Some scripted text');
        n.add('4:33 PM', 2, 'Scripted mission notification');
    </script>

}